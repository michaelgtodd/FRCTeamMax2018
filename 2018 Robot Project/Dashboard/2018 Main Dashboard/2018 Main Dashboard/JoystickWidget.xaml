                </Border>
            </Border>
            <Border Background="Green" Margin="108,27,27,28" >
                <Border Name="SecondaryButton11" Margin="2 ,2, 2, 2" Background="Black">
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" Text="11"/>
                </Border>
            </Border>
            <Border Background="Green" Margin="135,27,0,28" >
                <Border Name="SecondaryButton12" Margin="2 ,2, 2, 2" Background="Black">
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" Text="12"/>
                </Border>
            </Border>
        </Grid>
    </Grid>
</UserControl>
